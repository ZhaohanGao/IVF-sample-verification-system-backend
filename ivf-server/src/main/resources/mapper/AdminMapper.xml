<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nenu.server.mapper.AdminMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.nenu.server.pojo.Admin">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="telephone" property="telephone" />
        <result column="enabled" property="enabled" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="userface" property="userface" />
        <result column="remark" property="remark" />
        <result column="title" property="title" />
    </resultMap>

    <resultMap id="AdminWithRole" type="com.nenu.server.pojo.Admin" extends="BaseResultMap">
        <collection property="roles" ofType="com.nenu.server.pojo.Role">
            <id column="rId" property="id" />
            <result column="rname" property="name" />
            <result column="rnameZh" property="nameZh" />
        </collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, telephone, enabled, username, password, userface, remark, job, department, title
    </sql>

    <!-- 获取所有操作员 -->
    <select id="getAllAdmins" resultMap="AdminWithRole">
        SELECT
        a.*,
        r.id AS rId,
        r.`name` AS rname,
        r.nameZh AS rnameZh
        FROM
        t_admin a
        LEFT JOIN t_admin_role ar ON a.id = ar.adminId
        LEFT JOIN t_role r ON r.id = ar.rId
        WHERE
        a.id != #{id}
        <if test = "null!=keywords and ''!=keywords" >
            AND a.`name` LIKE CONCAT(
            '%',#{keywords},'%')
        </if>
        ORDER BY
        a.id
    </select>

    <insert id="initPatientAdminAccount">
        INSERT INTO t_admin (t_admin.id,t_admin.name,t_admin.username,t_admin.title) VALUES (#{patientId},#{name},#{citizenId},'患者')
    </insert>

    <update id="initPatientBirthdayAndGender">
        UPDATE t_patient
        SET birthday=substring(#{citizenId},7,8),
            gender = case if(length(#{citizenId})=18, cast(substring(#{citizenId},17,1) as UNSIGNED)%2, if(length(#{citizenId})=15,cast(substring(#{citizenId},15,1) as UNSIGNED)%2,3))
            when 1 then '男' when 0 then '女' else '未知' end
        WHERE
            ptId=#{patientId}
    </update>


</mapper>
